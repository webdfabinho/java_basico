
public class TestaPontoFlutuante {
	
	public static void main(String[] args) {
		
		double salario;
		
		salario = 2500.55;
		System.out.println("O Salario é de: " + salario); // concatena o texto com o valor da variavel
				
		double idade = 46;
		
		double divisao = 3.14 / 2;
		System.out.println(divisao);
		
		int OutraDivisao = 5 / 2;
		System.out.println(OutraDivisao); //O Java entende que é tudo inteiro.
		
		double NovaDivisao = 5.0 / 2;
		System.out.println(NovaDivisao); // Aqui coloquei o 5.0 para o java entender que ele é do tipo float
						
	}

}
